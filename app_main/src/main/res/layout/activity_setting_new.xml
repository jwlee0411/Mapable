<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textAlignment="center"
        android:textSize="24sp"
        android:fontFamily="@font/nanum_bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\'Mapable\'을 더욱 알차게 사용할 수 있는 설정입니다!"
        android:textAlignment="center"

        android:fontFamily="@font/nanum_regular"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBusSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_background"

                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp">


                    <TextView
                        android:id="@+id/textBus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nanum_bold"
                        android:text="버스 경로 보기"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewBusLine"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/gray2"
                        app:layout_constraintBottom_toBottomOf="@+id/switchBus"
                        app:layout_constraintEnd_toStartOf="@+id/switchBus"
                        app:layout_constraintTop_toTopOf="@+id/switchBus" />

                    <Switch
                        android:id="@+id/switchBus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text=""
                        app:layout_constraintBottom_toBottomOf="@+id/textBusExplain"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textBus" />

                    <TextView
                        android:id="@+id/textBusExplain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/nanum_regular"

                        android:text="버스를 이용하는 경로로 길찾기를 진행합니다."
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/textBus"
                        app:layout_constraintTop_toBottomOf="@+id/textBus" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearLayoutCompat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/setting_background"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                    tools:layout_editor_absoluteX="-16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="16dp"

                        >


                        <TextView
                            android:id="@+id/textBusLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/nanum_bold"
                            android:text="저상버스만 안내"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textBusExplain2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/nanum_regular"

                            android:text="저상버스를 이용 가능한 경로로 길찾기를 진행합니다."
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textBusLow"
                            app:layout_constraintTop_toBottomOf="@+id/textBusLow" />

                        <View
                            android:id="@+id/viewBusLowLine"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/gray2"
                            app:layout_constraintBottom_toBottomOf="@+id/switchBusLow"
                            app:layout_constraintEnd_toStartOf="@+id/switchBusLow"
                            app:layout_constraintTop_toTopOf="@+id/switchBusLow" />

                        <Switch
                            android:id="@+id/switchBusLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text=""
                            app:layout_constraintBottom_toBottomOf="@+id/textBusExplain2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textBusLow" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@color/gray2" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="74dp">


                        <TextView
                            android:id="@+id/textBusWait30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/nanum_bold"
                            android:text="30분 미만"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textBusExplain3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/nanum_regular"

                            android:text="대기해야 하는 시간이 30분 이상인 경우, 안내하지 않습니다."
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textBusWait30"
                            app:layout_constraintTop_toBottomOf="@+id/textBusWait30" />

                        <View
                            android:id="@+id/viewBusWait30Line"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/gray2"
                            app:layout_constraintBottom_toBottomOf="@+id/switchBusWait30"
                            app:layout_constraintEnd_toStartOf="@+id/switchBusWait30"
                            app:layout_constraintTop_toTopOf="@+id/switchBusWait30" />

                        <Switch
                            android:id="@+id/switchBusWait30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text=""
                            app:layout_constraintBottom_toBottomOf="@+id/textBusExplain3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textBusWait30" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@color/gray2" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="16dp"

                        >


                        <TextView
                            android:id="@+id/textBusWait60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/nanum_bold"
                            android:text="60분 미만"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textBusExplain4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/nanum_regular"

                            android:text="대기해야 하는 시간이 60분 이상인 경우, 안내하지 않습니다."
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/textBusWait60"
                            app:layout_constraintTop_toBottomOf="@+id/textBusWait60" />

                        <View
                            android:id="@+id/viewBusWait60Line"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="8dp"
                            android:background="@color/gray2"
                            app:layout_constraintBottom_toBottomOf="@+id/switchBusWait60"
                            app:layout_constraintEnd_toStartOf="@+id/switchBusWait60"
                            app:layout_constraintTop_toTopOf="@+id/switchBusWait60" />

                        <Switch
                            android:id="@+id/switchBusWait60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text=""
                            app:layout_constraintBottom_toBottomOf="@+id/textBusExplain4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textBusWait60" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                app:layout_constraintTop_toBottomOf="@+id/layoutBusSetting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="추천 경로"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanum_regular"
                    android:textAlignment="center"
                    android:drawableBottom="@drawable/abc_btn_radio_material" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="버스 우선"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanum_regular"
                    android:textAlignment="center"
                    android:drawableBottom="@drawable/abc_btn_radio_material"
                    />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="지하철 우선"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanum_regular"
                    android:textAlignment="center"
                    android:drawableBottom="@drawable/abc_btn_radio_material"/>

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="적은 도보"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nanum_regular"
                    android:textAlignment="center"
                    android:drawableBottom="@drawable/abc_btn_radio_material" />
            </RadioGroup>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>




