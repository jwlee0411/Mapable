<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieSetting1"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/wheelchair_auto_anim"
            />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieSetting2"
                android:layout_marginStart="16dp"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/wheelchair_normal_anim"
           />



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="휠체어"
                android:textAlignment="center"
                android:fontFamily="@font/nanum_bold"
                />
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:text="전동휠체어"
                android:textAlignment="center"
                android:fontFamily="@font/nanum_bold"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieSetting3"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/walk_disabled_anim"
                />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieSetting4"
                android:layout_marginStart="16dp"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/setting_grey_anim"
                />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="거동이 불편"
                android:textAlignment="center"
                android:fontFamily="@font/nanum_bold"
                />
            <TextView
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="직접 설정"
                android:layout_marginStart="16dp"
                android:textAlignment="center"
                android:fontFamily="@font/nanum_bold"
                />
        </TableRow>

    </TableLayout>




    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/nanum_bold"
        android:text="설정 시작하기"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>